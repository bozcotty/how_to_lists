<h1>List: <%= @list.title %></h1>
<h2>Steps:</h2>
<ul>
  <%= @list.steps.each do |step| %>
  <li><%= step.item %> -
    <%= link_to 'Show', list_step_path(@list, step) %> |
    <%= link_to 'Edit', edit_list_step_path(@list, step) %> |
    <%= link_to 'Delete', list_step_path(@list, step), method: :delete, data: { confirm: 'Are you sure?'} %>
  </li>
  <% end %>
</ul>
<p><%= link_to 'Create a Step', new_list_step_path(@list) %></p>

<%= link_to 'Back to List Index', lists_path %> |
 |
<%= link_to "Edit List Title", edit_list_path %> |
<%= link_to "Delete this List", @list, method: :delete, data: { confirm: 'Are you sure?' } %>
